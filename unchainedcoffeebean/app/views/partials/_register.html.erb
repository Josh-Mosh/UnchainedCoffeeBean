<!doctype html>

<script type="text/javascript">
	$(document).ready(function(){

		$('.login').click(function(){
			$('#loginModal').modal();
			$('#myModal').modal('hide')
		})
	})
</script>
	
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Register</h4>
    <p>Already a member? <button class='login btn btn-link'>Login</button></p>
</div>
<div class="modal-body">
	<%= simple_form_for @user, html: { multipart: true }, url: {action: 'create', controller: 'users'} do |f| %>
		<div class='form-group'>
			<%= f.input :first_name, input_html: {class: 'form-control', placeholder: "First Name"}, autofocus: true %>
		</div>
		<div class='form-group'>
			<%= f.input :last_name, input_html: {class: 'form-control', placeholder: "Last Name"}%>
		</div>
		<div class='form-group'>
			<%= f.input :email, input_html: {class: 'form-control', placeholder: "Email Address"}%>
		</div>
		<div class='form-group birthdate'>
			<%= f.input :birthdate, as: :date, :start_year => Date.today.year - 12, :end_year => 1900, discard_day: true, order: [:month, :year], input_html: {class: 'form-control'} %>
		</div>
		<div class='form-group'>
			<%= f.input :gender, collection: ["Male", "Female"], input_html: {class: 'form-control'}%>
		</div>

		<div class='form-group'>
			<%= f.input :address, input_html: {class: 'form-control', placeholder: "Seattle, WA"}%>
		</div>

		<div class='form-group'>
			<%= f.input :password, input_html: {class: 'form-control', placeholder: "Your Password"} %>
		</div>

		<div class='form-group'>
			<%= f.input :password_confirmation, input_html: {class: 'form-control', placeholder: "Confirm Password"} %>
		</div>

		<div class='form-group'>
			<%= f.input :avatar, as: :file %>
		</div>

		<div class='form-group'>
			<%= f.input :bio, as: :text, input_html: {class: 'form-control', placeholder: "Tell us about yourself"}%>
		</div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= f.button :submit, value: "Register", class: 'btn btn-primary' %>
</div>
<% end %>